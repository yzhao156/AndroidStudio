<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/ownerWelcomeMsg"
            android:layout_width="340dip"
            android:layout_height="wrap_content"
            android:text="Welcome example, \nyou are entered as a home owner"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="120dip" />

        <Button
            android:id="@+id/button15"
            android:layout_width="200dip"
            android:layout_height="80dip"
            android:onClick="WOCB"
            android:text="Check Booked"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dip" />

        <Button
            android:id="@+id/btnBS"
            android:layout_width="200dip"
            android:layout_height="80dip"
            android:onClick="BookNS"
            android:text="Book Services"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dip" />

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="180dip"
            android:layout_height="60dip"
            android:onClick="ownerSignout"
            android:text="Sign Out"
            android:textAllCaps="false" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>